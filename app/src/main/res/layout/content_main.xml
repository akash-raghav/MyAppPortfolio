<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/activity_horizontal_margin">

    <Button
        android:id="@+id/app_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:onClick="showMessageToast"
        android:text="AMTRACK"
        android:textColor="@color/colorTextIcons"/>

    <Button
        android:id="@+id/app_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:onClick="showMessageToast"
        android:text="SVAR"
        android:textColor="@color/colorTextIcons"/>

    <Button
        android:id="@+id/app_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:onClick="showMessageToast"
        android:text="Popular Movies"
        android:textColor="@color/colorTextIcons"/>

    <Button
        android:id="@+id/app_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:onClick="showMessageToast"
        android:text="Locate Yourself"
        android:textColor="@color/colorTextIcons"/>

    <Button
        android:id="@+id/app_btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:onClick="showMessageToast"
        android:text="ShoeMaker"
        android:textColor="@color/colorTextIcons"/>

    <Button
        android:id="@+id/app_btn6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:onClick="showMessageToast"
        android:text="FitBit"
        android:textColor="@color/colorTextIcons"/>
  </LinearLayout>

</ScrollView>